        <field name="name">crm.project.owner.form</field>
        <field name="model">crm.project.owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="phone" />
                            <field name="email" />
                        </group>
                        <group>
                            <field name="parent_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>

    <record id="crm_project_kanban" model="ir.ui.view">
        <field name="name">crm.project.kanban</field>
        <field name="model">crm.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="name" />
                <field name="crm_project_owner_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="value" />
                <field name="city_id" />
                <field name="stage_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_crm_project_kanban">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>Owner : <field name="crm_project_owner_id"/></li>
                                        <li>Start Date : <field name="start_date"/></li>
                                        <li>End Date : <field name="end_date"/></li>
                                        <li>Value : <field name="value"/></li>
                                    </ul>
                                </div>
                            </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="crm_project_action" model="ir.actions.act_window">

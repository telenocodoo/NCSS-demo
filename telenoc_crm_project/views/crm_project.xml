    <!--    crm.project-->
    <record id="crm_project_form" model="ir.ui.view">
        <field name="name">crm.project.form</field>
        <field name="model">crm.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="crm_project_owner_id"
                                   domain="[('parent_id','=',False)]"
                                   required="1"/>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                        <group>
<!--                            <field name="stage_id" />-->
                            <field name="value" />
                            <field name="city_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Owner Contacts" name="Owner Contacts" >
                            <field name="owner_contact_line_ids"
                            context="{'default_crm_project_owner_id': crm_project_owner_id}">
                                <tree editable="bottom">
                                    <field name="crm_project_owner_id" invisible="1" />
                                    <field name="crm_project_contact_id"
                                     domain="[('parent_id','=',crm_project_owner_id)]"/>
                                    <field name="job_position_id"/>
                                    <field name="notes"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="crm_project_owner_id" invisible="1" />
                                        <field name="crm_project_contact_id"
                                         domain="[('parent_id','=',crm_project_owner_id)]"/>
                                        <field name="job_position_id"/>
                                        <field name="notes"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Bidders" name="Bidders" >
                            <field name="bidder_line_ids">
                                <tree editable="bottom">
                                    <field name="bidder_id"
                                     domain="[('is_company', '=', True)]"/>
                                    <field name="bidder_role_id"/>
                                </tree>
                                <form>
                                    <field name="bidder_id"
                                     domain="[('is_company', '=', True)]"
                                    />
                                    <field name="bidder_role_id"/>
                                </form>
                            </field>
                        </page>
                        <page string="Winners" name="Winners" >
                            <field name="winner_line_ids" context="{'default_crm_project_id': active_id,
                            'default_company_role': name,
                            'default_project_number': active_id,
                            'default_is_bidder': True}"
                            >
                                <tree editable="bottom">
                                    <field name="company_id" domain="[('is_company', '=', True)]" />
                                    <field name="crm_project_id" invisible="1"/>
                                    <field name="is_bidder" invisible="1"/>
                                    <field name="company_role" invisible="1"/>
                                    <field name="project_number" invisible="1"/>
                                    <field name="company_role_id"/>
                                    <field name="involved_contact_id"
                                    domain="[('parent_id','=',company_id)]"/>
                                    <field name="involved_contact_role_id"/>
                                    <field name="notes"/>
                                    <field name="is_crm" invisible="1"/>
                                    <field name="crm_id" readonly="1"/>
                                    <button string="Create Opportunity" name="create_opportunity"
                                            attrs="{'invisible':[('is_crm', '=', True)]}"
                                            type="object" class="oe_highlight"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="company_id"/>
                                        <field name="company_role"/>
                                        <field name="company_role_id"/>
                                        <field name="involved_contact_id"
                                               domain="[('parent_id', '=', company_id)]"
                                        />
                                        <field name="involved_contact_role_id"/>
                                        <field name="is_crm" invisible="1"/>
                                        <field name="crm_id" readonly="1"/>
                                        <field name="notes"/>
                                    </group>

                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


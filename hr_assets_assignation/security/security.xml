        <record id="asset_assignation_employee_rule" model="ir.rule">
            <field name="name">Employee View Own assets</field>
            <field name="model_id" ref="model_asset_account_request"/>
            <field name="domain_force">['|',('create_uid', '=', user.id),
                ('employee_id', '=', user.employee_id.id)]</field>
            <field name="groups" eval="[(4, ref('asset_assignation_user'))]"/>
        </record>
